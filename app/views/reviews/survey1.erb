<%# app/views/reviews/survey1.erb %>
<div class="container">
  <div class="row justify-content-center mb-3">
    <div class="col-lg-8 d-flex justify-content-end">
      <%= render 'shared/language_switcher' %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="h3 mb-3 text-center"><%= t('.title') %></h2>
          <p class="text-muted text-center mb-4">
            <%= t('.subtitle') %>
          </p>

          <%= form_with(url: localized_submit_survey1_shop_review_path(@shop, @review, locale: params[:locale]), 
                        data: { turbo: false },
                        method: :post
                        ) do |form| %>
            <div class="mb-4">
              <label class="form-label"><%= t('.feedback_label') %>
                <span class="text-danger">*</span>
              </label>
              <%= form.text_area :feedback1, 
                  class: "form-control",
                  value: session[:feedback1],
                  rows: 4,
                  placeholder: t('.feedback_placeholder'),
                  required: true %>
            </div>

            <div class="text-center">
              <%= form.submit t('.next_button'), class: 'btn btn-primary btn-lg px-5' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>